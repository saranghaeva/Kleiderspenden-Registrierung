    <script>
        // Burger Menu Funktionalität
        function toggleMenu(event) {
            event.stopPropagation();
            const burgerNav = document.getElementById('burgerNav');
            burgerNav.style.display = burgerNav.style.display === 'block' ? 'none' : 'block';
        }

        // Schließen des Burger-Menüs bei Klick außerhalb
        function closeBurgerMenu(event) {
            const burgerNav = document.getElementById('burgerNav');
            const burgerMenu = document.querySelector('.burger-menu');
            if (burgerNav.style.display === 'block' && !burgerMenu.contains(event.target) && !burgerNav.contains(event.target)) {
                burgerNav.style.display = 'none';
            }
        }
    </script>
